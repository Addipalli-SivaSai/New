pipeline {
    agent any

    stages {
         stage('show-content')
         {
             steps{
                 bat 'echo %cd%'
                 bat 'dir'
                 bat 'type first.txt'
             }
         }
         
    
         }
         post{
            always{
               emailext body: 'HI', compressLog: true, subject: '', to: 'addipallisivasai@gmail.com'
             }
             success{
                 echo "All the above stages are successfull"
             }
         }
    
}

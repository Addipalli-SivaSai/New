pipeline {
    agent any
  tools{
git 'github'
}
    stages {
         stage('show-content')
         {
             steps{
                 bat 'echo %cd%'
                 bat 'dir'
                 bat 'type first.txt'
             }
         }
         
    
         }
         post{
             success{
             bat 'git --version'
echo "All the above stages are successfull"
             }
         }
    
}
